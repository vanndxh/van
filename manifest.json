{
  "name": "van",
  "description": "写着玩的小插件",
  "version": "0.0.4",
  "manifest_version": 3,
  "action": {
    "default_popup": "./popup.html",
    "default_icon": "./logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://live.bilibili.com/*"],
      "js": ["./js/clear22.js"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.bilibili.com/video/*",
        "https://t.bilibili.com/*",
        "https://space.bilibili.com/*",
        "https://www.bilibili.com/read/*"
      ],
      "js": ["./js/biliTag.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://api.bilibili.com/*"
  ]
}
